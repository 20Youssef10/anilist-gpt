# Application Settings
APP_NAME=AniList GPT
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
SECRET_KEY=change-this-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# AniList OAuth (Required)
ANILIST_CLIENT_ID=your-anilist-client-id
ANILIST_CLIENT_SECRET=your-anilist-client-secret
ANILIST_REDIRECT_URI=http://localhost:8000/auth/callback

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/anilist_gpt
REDIS_URL=redis://localhost:6379/0

# Cache TTL (seconds)
CACHE_TTL_DEFAULT=3600
CACHE_TTL_TRENDING=1800
CACHE_TTL_USER_LIST=300

# Rate Limiting
RATE_LIMIT_REQUESTS=90
RATE_LIMIT_WINDOW=60

# MCP Transport (sse or websocket)
MCP_TRANSPORT=sse

# CORS
CORS_ORIGINS=["*"]

# Observability
LOG_LEVEL=INFO
SENTRY_DSN=
